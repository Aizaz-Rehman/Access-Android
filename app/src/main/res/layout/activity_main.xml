<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:text="Welcome"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/btn_codechange"
        android:layout_width="198dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:text="Change Code"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/btn_generate_code" />

    <Button
        android:id="@+id/btn_generate_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Generate Code"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_codechange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_codechange"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/txt_forgot_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:linksClickable="false"
        android:text="Forgot Code?"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/btn_generate_code"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_generate_code"
        app:layout_constraintTop_toBottomOf="@+id/btn_generate_code" />


    <Button
        android:id="@+id/btn_commond_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bg"
        android:text="Commands List"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_codechange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_codechange"
        app:layout_constraintTop_toBottomOf="@+id/btn_codechange" />

    <ToggleButton
        android:id="@+id/btn_toogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bg"
        android:checked="false"
        android:drawableStart="@drawable/selector"
        android:drawableLeft="@drawable/selector"
        android:drawablePadding="0dp"
        android:paddingLeft="10dp"
        android:textOff="SMS Controller Off"
        android:textOn="SMS Controller On"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_commond_list"
        app:layout_constraintStart_toStartOf="@+id/btn_commond_list"
        app:layout_constraintTop_toBottomOf="@+id/btn_commond_list" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:drawablePadding="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Help"
        android:textColor="@color/colorBlack"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_logout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_toogle"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/ic_logout"
        android:drawablePadding="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Logout"
        android:textColor="@color/colorBlack"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHelp"
        app:layout_constraintTop_toBottomOf="@+id/btn_toogle"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="104dp"
        android:layout_height="22dp"
        android:text="Aizaz Rehman"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/btn_generate_code"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="40dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/txt_forgot_code"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_forgot_code"
        app:layout_constraintTop_toBottomOf="@+id/txt_forgot_code" />


</androidx.constraintlayout.widget.ConstraintLayout>